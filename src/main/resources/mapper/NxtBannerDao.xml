<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.companywebsite.dao.NxtBannerDao">

    <resultMap id="BaseResultMap" type="com.newxton.companywebsite.entity.NxtBanner">
        <!--@Table nxt_banner-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="uploadfileId" column="uploadfile_id" jdbcType="INTEGER"/>
        <result property="urlpath" column="urlpath" jdbcType="VARCHAR"/>
        <result property="clickUrl" column="click_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, category_id, uploadfile_id, urlpath, click_url
        from newxton_companywebsite.nxt_banner
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, category_id, uploadfile_id, urlpath, click_url
        from newxton_companywebsite.nxt_banner
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, category_id, uploadfile_id, urlpath, click_url
        from newxton_companywebsite.nxt_banner
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="uploadfileId != null">
                and uploadfile_id = #{uploadfileId}
            </if>
            <if test="urlpath != null and urlpath != ''">
                and urlpath = #{urlpath}
            </if>
            <if test="clickUrl != null and clickUrl != ''">
                and click_url = #{clickUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into newxton_companywebsite.nxt_banner(category_id, uploadfile_id, urlpath, click_url)
        values (#{categoryId}, #{uploadfileId}, #{urlpath}, #{clickUrl})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update newxton_companywebsite.nxt_banner
        <set>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="uploadfileId != null">
                uploadfile_id = #{uploadfileId},
            </if>
            <if test="urlpath != null and urlpath != ''">
                urlpath = #{urlpath},
            </if>
            <if test="clickUrl != null and clickUrl != ''">
                click_url = #{clickUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from newxton_companywebsite.nxt_banner where id = #{id}
    </delete>

</mapper>