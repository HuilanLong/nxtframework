<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.nxtframework.dao.NxtProductBrandDao">

    <resultMap id="BaseResultMap" type="com.newxton.nxtframework.entity.NxtProductBrand">
        <!--@Table nxt_product_brand-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="brandName" column="brand_name" jdbcType="VARCHAR"/>
        <result property="uploadfileId" column="uploadfile_id" jdbcType="INTEGER"/>
        <result property="sortId" column="sort_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, brand_name, uploadfile_id, sort_id
        from nxt_product_brand
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, brand_name, uploadfile_id, sort_id
        from nxt_product_brand
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, brand_name, uploadfile_id, sort_id
        from nxt_product_brand
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="brandName != null and brandName != ''">
                and brand_name = #{brandName}
            </if>
            <if test="uploadfileId != null">
                and uploadfile_id = #{uploadfileId}
            </if>
            <if test="sortId != null">
                and sort_id = #{sortId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_product_brand(brand_name, uploadfile_id, sort_id)
        values (#{brandName}, #{uploadfileId}, #{sortId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_product_brand
        <set>
            <if test="brandName != null and brandName != ''">
                brand_name = #{brandName},
            </if>
            <if test="uploadfileId != null">
                uploadfile_id = #{uploadfileId},
            </if>
            <if test="sortId != null">
                sort_id = #{sortId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_product_brand where id = #{id}
    </delete>

</mapper>