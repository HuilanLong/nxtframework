<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.companywebsite.dao.NxtProductPictureDao">

    <resultMap id="BaseResultMap" type="com.newxton.companywebsite.entity.NxtProductPicture">
        <!--@Table nxt_product_picture-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="uploadfileId" column="uploadfile_id" jdbcType="INTEGER"/>
        <result property="sortId" column="sort_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, product_id, uploadfile_id, sort_id
        from newxton_companywebsite.nxt_product_picture
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, product_id, uploadfile_id, sort_id
        from newxton_companywebsite.nxt_product_picture
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, product_id, uploadfile_id, sort_id
        from newxton_companywebsite.nxt_product_picture
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
            <if test="uploadfileId != null">
                and uploadfile_id = #{uploadfileId}
            </if>
            <if test="sortId != null">
                and sort_id = #{sortId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into newxton_companywebsite.nxt_product_picture(product_id, uploadfile_id, sort_id)
        values (#{productId}, #{uploadfileId}, #{sortId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update newxton_companywebsite.nxt_product_picture
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="uploadfileId != null">
                uploadfile_id = #{uploadfileId},
            </if>
            <if test="sortId != null">
                sort_id = #{sortId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from newxton_companywebsite.nxt_product_picture where id = #{id}
    </delete>

</mapper>