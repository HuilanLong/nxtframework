<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.companywebsite.dao.NxtProductSkuDao">

    <resultMap id="BaseResultMap" type="com.newxton.companywebsite.entity.NxtProductSku">
        <!--@Table nxt_product_sku-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="skuName" column="sku_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, product_id, sku_name
        from nxt_product_sku
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, product_id, sku_name
        from nxt_product_sku
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, product_id, sku_name
        from nxt_product_sku
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
            <if test="skuName != null and skuName != ''">
                and sku_name = #{skuName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_product_sku(product_id, sku_name)
        values (#{productId}, #{skuName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_product_sku
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="skuName != null and skuName != ''">
                sku_name = #{skuName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_product_sku where id = #{id}
    </delete>

</mapper>